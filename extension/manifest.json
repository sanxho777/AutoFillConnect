{
  "manifest_version": 3,
  "name": "AutoScrapePro",
  "version": "1.0.0",
  "description": "Vehicle data scraping extension for AutoTrader, Cars.com, CarGurus, and Dealer.com",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.autotrader.com/*",
    "https://www.cars.com/*",
    "https://www.cargurus.com/*",
    "https://www.dealer.com/*",
    "https://www.facebook.com/*",
    "http://localhost:*/*",
    "https://*.replit.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.autotrader.com/*",
        "https://www.cars.com/*",
        "https://www.cargurus.com/*",
        "https://www.dealer.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoScrapePro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": [
        "https://www.autotrader.com/*",
        "https://www.cars.com/*",
        "https://www.cargurus.com/*",
        "https://www.dealer.com/*"
      ]
    }
  ]
}
